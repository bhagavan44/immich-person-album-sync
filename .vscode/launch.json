{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "AlbumSync",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceFolder}/AlbumSync/bin/Debug/net10.0/win-x64/ImmichAlbumSync.dll",
            "args": [ "--list-people" ],
            "cwd": "${workspaceFolder}/AlbumSync",
            "stopAtEntry": false,
            // Enable launching with environment variables defined in a file
            "envFile": "${workspaceFolder}/AlbumSync/.env",
            "console": "internalConsole"
        }
    ]
}